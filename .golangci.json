{
    "run": {
        "skip-dirs": [
            "vendor"
        ],
        "timeout": "10m"
    },
    "output": {
        "format": "colored-line-number:stdout,html:golangci.html,json:golangci.json"
    },
    "linters": {
        "enable": ["misspell"]
    },
    "linters-settings": {
        "misspell": {
            "ignore-words": []
        },
        "staticcheck": {
            "checks": [
                "all",
                "-ST1000",
                "-ST1003",
                "-ST1016",
                "-ST1020",
                "-ST1021",
                "-ST1022",
                "-SA1019"
            ]
        }
    }
}